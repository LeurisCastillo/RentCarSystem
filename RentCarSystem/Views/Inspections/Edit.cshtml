@model RentCarSystem.Models.Inspection

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Inspection</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasScratches" /> @Html.DisplayNameFor(model => model.HasScratches)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfFuel" class="control-label"></label>
                <select asp-for="AmountOfFuel" class="form-control"></select>
                <span asp-validation-for="AmountOfFuel" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasReplacementWheel" /> @Html.DisplayNameFor(model => model.HasReplacementWheel)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasHydraulicJack" /> @Html.DisplayNameFor(model => model.HasHydraulicJack)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasBrokenGlass" /> @Html.DisplayNameFor(model => model.HasBrokenGlass)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WheelState1" /> @Html.DisplayNameFor(model => model.WheelState1)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WheelState2" /> @Html.DisplayNameFor(model => model.WheelState2)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WheelState3" /> @Html.DisplayNameFor(model => model.WheelState3)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WheelState4" /> @Html.DisplayNameFor(model => model.WheelState4)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
