@model IEnumerable<RentCarSystem.Models.Inspection>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="inspec_table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HasScratches)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountOfFuel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasReplacementWheel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasHydraulicJack)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasBrokenGlass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WheelState1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WheelState2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WheelState3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WheelState4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HasScratches)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountOfFuel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasReplacementWheel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasHydraulicJack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasBrokenGlass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WheelState1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WheelState2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WheelState3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WheelState4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#inspec_table').DataTable();
        });
    </script>
}
