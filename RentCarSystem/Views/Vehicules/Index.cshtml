@model IEnumerable<RentCarSystem.Models.Vehicule>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-4">Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">>Create New</a>
</p>
<table class="table table-striped table-bordered" id="vehicules_table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChasisNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotorNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlateNumber)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChasisNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotorNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlateNumber)
            </td>
            
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#vehicules_table').DataTable();
        });
    </script>
}